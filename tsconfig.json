{
  "compilerOptions": {
    "alwaysStrict": true,
    "checkJs": true,
    "forceConsistentCasingInFileNames": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "pretty": true,
    "strict": true,
    "target": "es2020"
  },
  "exclude": ["dist", "node_modules"]
}
